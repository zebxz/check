version: '3.1'             
services: 
  springapp:
    image: mylandmarktech/sping-boot-mongo   
    restart: always    
    ports:
    - 8080:8080     
    networks:
    - fintech     
    environment:
    - MONGO_DB_HOSTNAME=mongodb
    - MONGO_DB_USERNAME=proddb
    - MONGO_DB_PASSWORD=proddb@123         
  mongodb:
    image: mongo     
    restart: always     
    networks:       
    - fintech                  
    volumes:
    - data11:/data/db
    environment:
    - MONGO_INITDB_ROOT_USERNAME=proddb
    - MONGO_INITDB_ROOT_PASSWORD=proddb@123       
volumes:                                           
  data11
    driver: local
networks:
  tesla: 
    external: true    ...    true means the ntwrk is already available
  fintech:
    driver: bridge  

